{
  // GLOBALNE
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // PRETTIER (lokalny z node_modules)
  "prettier.prettierPath": "./node_modules/prettier",
  "prettier.configPath": ".prettierrc.json",

  // TAB SIZE 2 wszÄ™dzie
  "[php]": { "editor.defaultFormatter": "esbenp.prettier-vscode", "editor.tabSize": 2, "editor.insertSpaces": true },
  "[html]": { "editor.tabSize": 2, "editor.insertSpaces": true },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode", "editor.tabSize": 2 },
  "[scss]": { "editor.defaultFormatter": "esbenp.prettier-vscode", "editor.tabSize": 2 }
}
